{
  "camera": {
    "source": 0,
    "width": 640,
    "height": 480,
    "rotation": 0,
    "fps_target": 30
  },
  "perception": {
    "yolo_model": "yolov8n.pt",
    "pose_model": "yolov8n-pose.pt",
    "face_threshold": 0.6,
    "object_confidence": 0.4,
    "phone_confidence": 0.6,
    "frame_skip": 3,
    "detection_interval": 3.0,
    "face_recognition_interval": 2.0,
    "enable_emotion": false,
    "enable_gestures": true,
    "enable_motion": true,
    "enable_face_rec": true
  },
  "voice": {
    "enable_voice_input": true,
    "enable_wake_word": false,
    "wake_words": [
      "hey memo",
      "hello memo"
    ],
    "wake_word_threshold": 0.5,
    "tts_rate": 1,
    "tts_volume": 1.0,
    "tts_voice": "Zira",
    "language": "en-US"
  },
  "dashboard": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "update_interval": 15
  },
  "performance": {
    "adaptive_skip": true,
    "cpu_threshold": 75,
    "memory_threshold": 90,
    "target_fps": 30,
    "pi_mode_fps": 10
  },
  "system": {
    "focus_mode_default": false,
    "greeting_enabled": true,
    "personality_mode": "helpful",
    "tts_cooldown": 5.0,
    "save_on_exit": true,
    "logging_level": "INFO"
  },
  "ai": {
    "backend": "ollama",
    "gemini_api_key": "YOUR_KEY_HERE",
    "gemini_model": "gemini-1.5-flash",
    "ollama_url": "http://localhost:11434/api/generate",
    "ollama_model": "tinyllama:latest",
    "personality_prompt": "You are MEMO, a witty and helpful AI assistant living in a Raspberry Pi. You are concise, fun, and sometimes sarcastic. Keep responses short (under 2 sentences) unless asked for details."
  }
}